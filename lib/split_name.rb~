class Split
  def self.first_name_from_full_name(name)
    full_name = name
    name = full_name.split
    first_name = name.delete_at(0).to_s
  end
    
  def self.last_name_from_full_name(name)
    full_name = name
    name = full_name.split
    first_name = name.delete_at(0).to_s
    last_name = name.join(' ')
  end
end
